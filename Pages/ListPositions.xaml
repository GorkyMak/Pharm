<Page x:Class="Pharm.Pages.ListPositions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pharm.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListPositions">

    <Grid>
        <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single" x:Name="DGPositions">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Код должности" Binding="{Binding Код_должности}"/>
                <DataGridTextColumn Header="Название должности" Binding="{Binding Название_должности}"/>
                <DataGridTextColumn Header="Оклад" Binding="{Binding Оклад__}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
