<Page x:Class="Pharm.Pages.ListEmployees"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pharm.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListEmployees">

    <Grid>
        <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single" x:Name="DGEmpl">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Код сотрудника" Binding="{Binding Код_сотрудника}"/>
                <DataGridTextColumn Header="Код должности" Binding="{Binding Код_должности}"/>
                <DataGridTextColumn Header="Код контактных данных" Binding="{Binding Код_контактных_данных}"/>
                <DataGridTextColumn Header="Логин" Binding="{Binding Логин}"/>
                <DataGridTextColumn Header="Код личных данных" Binding="{Binding Код_личных_данных}"/>
                <DataGridTextColumn Header="Дата приёма на работу" Binding="{Binding Дата_приёма_на_работу}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
