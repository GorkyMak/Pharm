<Page x:Class="Pharm.Pages.ListWarehouses"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pharm.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListWarehouses">

    <Grid>
        <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single" x:Name="DGWarehouses">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Код склада" Binding="{Binding Код_склада}"/>
                <DataGridTextColumn Header="Площадь" Binding="{Binding Площадь_м2}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
