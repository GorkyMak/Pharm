<Page x:Class="Pharm.Pages.ListSocCards"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pharm.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListSocCards">

    <Grid>
        <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single" x:Name="DGSocCards">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Код социальной карты" Binding="{Binding Код_социальной_карты}"/>
                <DataGridTextColumn Header="ФИО владельца" Binding="{Binding ФИО_владельца}"/>
                <DataGridTextColumn Header="Срок действия" Binding="{Binding Срок_действия, StringFormat=dd.MM.yyyy}"/>
                <DataGridTextColumn Header="Скидка" Binding="{Binding Скидка}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
